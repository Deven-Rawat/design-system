{# Set classes #}
{%- set classNames = "nhsd-a-text-highlight" -%}
{%- if params.classes -%}
  {% set classNames = classNames + " " + params.classes %}
{%- endif -%}

{# Set content #}
{% set content = "hello world" %}
{%- if params.content %}
  {%- set content = params.content -%}
{% endif -%}
{% if "nhsd-u-ff-mono" in classNames -%}
<code class="{{ classNames }}">{{ content }}</code>
{%- else -%}
<span class="{{ classNames }}">{{ content }}</span>
{%- endif %}
