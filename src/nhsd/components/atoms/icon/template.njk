{#- Set classes for this component -#}
{%- set classNames = "nhsd-a-icon" -%}
{% if params.classes -%}
  {%- set classNames = classNames + " " + params.classes -%}
{%- endif %}

{#- Common SVG attributes -#}
{%- macro common_svg_attr() -%}
  xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid meet" aria-hidden="true" focusable="false" viewBox="0 0 16 16"
{%- endmacro -%}

{#- Size attributes -#}
{%- macro svg_size_attr(nested = false) -%}
  {%- if scaled %} width="60%" height="60%" x="20%" y="20%"{% elseif nested %} width="42%" height="42%" x="29%" y="29%"{% else %} width="100%" height="100%"{% endif -%}
{%- endmacro -%}

{%- macro icon_svg_attr(nested = false) -%}
  {{ common_svg_attr() }} {{ svg_size_attr(nested) }}
{%- endmacro -%}

{#- Macros -#}
{%- macro i_arrow_right(nested = false) -%}
