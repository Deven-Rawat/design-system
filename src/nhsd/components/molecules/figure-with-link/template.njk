{#- Import atom macros -#}
{%- from "../../../njk/macros/atoms.njk" import
  nhsd_a_link,
  nhsd_a_figure
-%}

{#- Set classes -#}
{% set headingClassNames = "nhsd-t-heading-s" %}
{%- if params.headingClass -%}
  {% set headingClassNames = params.headingClass %}
{%- endif -%}

<div class="nhsd-m-figure-with-link">
  {{ nhsd_a_figure(params.figure) }}
  <div class="{{ headingClassNames }}">
    {{ nhsd_a_link(params.link) }}
  </div>
</div>
